<Page x:Class="MarathonSkills.Views.ViewerPages.ViewerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Views.ViewerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню зрителя">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Style="{StaticResource HorizontalStackPanel}">
            <Button Style="{StaticResource MainBigButton}" x:Name="AddReviewButton" Click="AddReviewButton_Click">Оставить отзыв</Button>
            <Button Style="{StaticResource MainBigButton}" x:Name="SeeReviewsButton" Click="SeeReviewsButton_Click">Посмотреть отзывы</Button>
        </StackPanel>
    </Grid>
</Page>
