<Page x:Class="MarathonSkills.Views.RunnerPages.RunnerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Views.RunnerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню бегуна">

    <Grid>
        <UniformGrid Style="{StaticResource MainUniformGrid}"
                     Columns="2">
            <Button x:Name="MarathonRegistrationButton" Style="{StaticResource MainBigButton}" Click="MarathonRegistrationButton_Click">Регистрация на марафон</Button>
            <Button x:Name="MyResultsButton" Style="{StaticResource MainBigButton}" Click="MyResultsButton_Click">Мои результаты</Button>
            <Button x:Name="EditProfileButton" Style="{StaticResource MainBigButton}" Click="EditProfileButton_Click">Редактирование профиля</Button>
            <Button x:Name="MyCharityButton" Style="{StaticResource MainBigButton}" Click="MyCharityButton_Click">Мой спонсор</Button>
            <Button x:Name="ContactsButton" Style="{StaticResource MainBigButton}" Click="ContactsButton_Click">Контакты</Button>
        </UniformGrid>
    </Grid>
</Page>
