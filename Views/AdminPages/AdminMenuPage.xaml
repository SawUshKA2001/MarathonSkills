<Page x:Class="MarathonSkills.Views.AdminPages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Views.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню администратора">

    <Grid>
        <UniformGrid Style="{StaticResource MainUniformGrid}" Grid.Row="1">
            <Button x:Name="UsersButton" Content="Пользователи" Style="{DynamicResource MainBigButton}" Click="UsersButton_Click"></Button>
            <Button x:Name="VolunteersButton" Content="Волонтёры" Style="{DynamicResource MainBigButton}"></Button>
            <Button x:Name="CharitiesButton" Content="Благотворительные организации" Style="{DynamicResource MainBigButton}" Click="CharitiesButton_Click"></Button>
        </UniformGrid>
    </Grid>
</Page>
