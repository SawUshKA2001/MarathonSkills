<Window x:Class="MarathonSkills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills"
        mc:Ignorable="d"
        Title="{Binding ElementName=MainFrame, Path=Content.Title, StringFormat=Marathon Skills - {0}}" 
        MinHeight="700" 
        MaxHeight="1280" 
        Height="700" 
        MinWidth="1000" 
        MaxWidth="1920" 
        Width="1000"
        Icon="/Resources/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Rectangle Fill="{StaticResource MainColor}" Grid.Row="1"/>
        
    </Grid>
</Window>
